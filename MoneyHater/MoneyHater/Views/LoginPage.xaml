<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyHater.Views.LoginPage"
             Shell.FlyoutBehavior="Disabled"
			 Shell.NavBarIsVisible="False"
			 xmlns:viewmodels="clr-namespace:MoneyHater.ViewModels"
			 xmlns:controls="clr-namespace:MoneyHater.Controls"
             x:DataType="viewmodels:LoginViewModel"
             xmlns:ffSvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             BackgroundColor="{AppThemeBinding 
                        Dark={StaticResource WindowBackgroundColorDark}, 
                        Light={StaticResource WindowBackgroundColor}}">
   <ContentPage.BindingContext>
	  <viewmodels:LoginViewModel />
   </ContentPage.BindingContext>


   <ContentPage.Content>
	  <StackLayout Padding="40" VerticalOptions="Center"
                     HorizontalOptions="FillAndExpand">
		 <Label Text="Email:"/>
		 <controls:StandardEntry
                    BackgroundColor="White"
                    BorderColor="Black"
                    BorderThickness="1"
                    CornerRadius="8"
					Text="{Binding Email}"
                    Placeholder="Email" />
		 <Label Text="Password:"/>
		 <Entry IsPassword="True" Placeholder="Password" Text="{Binding Password}"/>
		 <Button Text="Login" Command="{Binding LoginCommand}"/>
		 <Label Text="Register" HorizontalOptions="Center">
			<Label.GestureRecognizers>
			   <TapGestureRecognizer Command="{Binding ToRegisterCommand}"/>
			</Label.GestureRecognizers>
		 </Label>
	  </StackLayout>
   </ContentPage.Content>
</ContentPage>